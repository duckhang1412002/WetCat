@{
    ViewData["Title"] = "Followings";
    //Layout = "~/Views/Shared/_Wall.cshtml";
}

@model List<Follow>

<div class="central-meta">
<div class="widget friend-list stick-widget">
    <h4 class="widget-title">Followings</h4>
    <div id="searchDir">
        <div id="searchiii"></div>
        <ul id="people-list" class="friendz-list">
            @foreach (Follow fl in Model)
            {
                <li style="position: relative; margin-top:3vw; margin-bottom: 3vw;">
                    <figure>
                        <img src="@fl.FollowedUsernameNavigation.AvatarSrc" alt="">
                    </figure>
                    <div class="friendz-meta" style="width:fit-content;">
                        <a href="time-line.html">@fl.FollowedUsernameNavigation.Nickname</a>
                    </div>
                    <button onclick='window.location = "@Url.Action("UnfollowAtList","Follow", new {usn = fl.FollowedUsername })";' style="position: absolute; right: 4%; top: 20%"
                    class="button-1 btn btn-warning">Unfollow</button>
            </li>
            }

        </ul>
    </div>
    </div>
    
