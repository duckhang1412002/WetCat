@model List<User>
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


@{
	ViewData["Title"] = "Homepage";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="" />
	<meta name="keywords" content="" />
	<title>WetCat Social Network</title>
</head>

<body style=" overflow-x: hidden;">
	<!--<div class="se-pre-con"></div>-->
<div class="topbar stick">
			<div class="logo">
				<a title="" href="#"><img class="" id="web_logo" src="images/profiles/admin/logo.jpg" alt=""></a>
			</div>

			<div class="top-area">
				<div class="top-search">
					<form method="post" asp-action="Search" asp-controller="Home">
						<input type="text" placeholder="Search User" required="required" name="data">
						<button data-ripple><i class="ti-search"></i></button>
					</form>
				</div>
			</div>
		</div><!-- topbar -->
	

		<section>
			<div class="gap2 gray-bg">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12">
							<div class="row merged20" id="page-contents">
								<div class="col-lg-3">
									<aside class="sidebar static left">
										<div class="widget">
											<h4 class="widget-title">Shortcuts</h4>
											<ul class="naves">
												<li>
													<i class="ti-clipboard"></i>
													<a asp-action="Index" asp-controller="Post">News feed</a>
												</li>
												<li>
													<i class="ti-files"></i>
													<a href='/Wall/@HttpContextAccessor.HttpContext.Session.GetString("username")/timeline'>My pages</a>
												</li>
												<li>
													<i class="ti-user"></i>
													<a href='/Wall/@HttpContextAccessor.HttpContext.Session.GetString("username")/friends'>friends</a>
												</li>
												
												<li>
													<i class="ti-power-off"></i>
													<a asp-action="Logout" asp-controller="Home" title="">Logout</a>
												</li>
											</ul>
										</div><!-- Shortcuts -->
									</aside>
								</div><!-- sidebar -->

								<div class="col-lg-6">
									<div class="central-meta">
										<div class="frnds">
											<div class="tab-content">
												<div class="tab-pane active fade show " id="frends">
													<ul class="nearby-contct" id="people-list">
														@foreach (var item in Model)
														{
															<li>
																<div class="nearly-pepls">
																		<figure>
																			<a href="/Wall/@item.Username/timeline"
																		title=""><img
																			src="@item.AvatarSrc"
																			alt=""></a>
																		</figure>
																		<div class="pepl-info">
																			<h4><a href="/Wall/@item.Username/timeline"
																			title="">@item.Nickname</a>
																			</h4>
																			<a href="/Wall/@item.Username/timeline"
																		 style="top: 0;"
																		data-ripple=""></a>
																		</div>
																</div>
															</li>
														}


													</ul>
												</div>
											</div>
										</div>

									</div>
								</div><!-- centerl meta -->
								<div class="col-lg-3"></div><!-- sidebar -->
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<div class="bottombar">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
					</div>
				</div>
			</div>
		</div>
	</div>
	

</body>

</html>