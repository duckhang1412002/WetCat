@model Post
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this Post?</h2>
<hr>
<form asp-action="Delete1" method="post">
    <div class="row">
        <b class="col-6">Post ID</b>
        <div class="col-6">@Model.PostId</div>
    </div>
    <div class="row">
        <b class="col-6">Post Content</b>
        <div class="col-6">@Model.PostContent</div>
    </div>
    <div class="row">
        <b class="col-6">Post Images</b>
        <div class="col-6">
            <img style="width:100px; height: 100px;" src="@Model.PostImgSrc" alt="">
        </div>
    </div>
    <div class="row">
        <b class="col-6">Author</b>
        <div class="col-6">@Model.PostAuthor</div>
    </div>
    <div class="row">
        <b class="col-6">Date Posted</b>
        <div class="col-6">@Model.PostTime.ToShortDateString()</div>
    </div>
    <div class="row">
        <b class="col-6">Status</b>
        <div class="col-6">@Model.PrivacyMode</div>
    </div>
    <br> 
    <div>
        <input type="submit" value="Delete" class="btn btn-danger" asp-action="Delete1" asp-controller="Admin" asp-route-postid="@Model.PostId"/>

        @Html.ActionLink("Back to list", "Index") 
    </div>
</form>
